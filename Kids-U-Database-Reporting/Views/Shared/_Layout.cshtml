<!DOCTYPE html>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<html lang="en">
<head ng-app="kidsu">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="/css/bootstrap.css" rel="stylesheet" />
    <link href="/css/site.css" rel="stylesheet" />
    <link href="/css/bootstrap-datepicker3.css" rel="stylesheet" />

    <script src="/js/site.js"></script>
    <!--USED TO GIVE THE LOOK AND FEEL TO THE LOGOUT BUTTON-->
    <style>
        .sugar
        {
            color:  white;
            border: none;
            background-color: inherit;
            padding: 14px 28px;
            font-size: 16px;
            cursor: pointer;
            display: inline-block;
        }
        .sugar:hover 
        {
            background-color: #000C7C;
            color: white;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>

                <!--links-->
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Students", "Index", "Student")</li>
                        <li>@Html.ActionLink("Outcome Measurements", "Index", "OutcomeMeasurement")</li>
                        <li>@Html.ActionLink("Report Cards", "Index", "ReportCard")</li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        <li><a class="sugar" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Manage @User.Identity.Name</a> </li>
                        <li class="navbar-collapse collapse">
                            <form asp-area="Identity" asp-page="/Account/Logout">
                                <button type="submit" class="sugar" formmethod="post">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <hr>
    <footer class="border-top footer text-muted">
        <div class="container">
            Hosting Donated by <a href="http://www.everleap.com">Everleap</a>
        </div>
    </footer>
    <partial name="_validationScriptsPartial" />
</body>
</html>

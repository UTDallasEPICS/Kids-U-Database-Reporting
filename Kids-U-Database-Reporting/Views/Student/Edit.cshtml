<!--connects to student model-->
@model Student
@{
    ViewData["Title"] = "Edit Student";
}
<!--asp-for="FirstName" tag will put the input into the FirstName variable of student model and replaces id="FirstName" name="FirstName" type="text" value=""-->

<body>
    <div class="container body-content">
        <h2>Edit Student Information</h2>

        <!--form-->
        <form asp-controller="Student" asp-action="ApplyEdit" method="post">
            <div class="form-horizontal">
                <!--FirstName-->
                <div class="form-group">
                    <label class="control-label col-md-2">First Name</label>
                    <div class="col-md-10">
                        <input asp-for="FirstName" class="form-control text-box single-line" />
                    </div>
                </div>

                <!--LastName-->
                <div class="form-group">
                    <label class="control-label col-md-2">Last Name</label>
                    <div class="col-md-10">
                        <input asp-for="LastName" class="form-control text-box single-line" />
                    </div>
                </div>

                <!--Ethnicity-->
                <div class="form-group">
                    <label class="control-label col-md-2">Ethnicity</label>
                    <div class="col-md-10">
                        <select asp-for="Ethnicity" asp-items="ViewBag.SelectLists.EthnicityList" class="form-control"></select>
                    </div>
                </div>

                <!--SchoolName-->
                <div class="form-group">
                    <label class="control-label col-md-2">School</label>
                    <div class="col-md-10">
                        <select asp-for="SchoolName" class="form-control" asp-items=ViewBag.Selectlists.SchoolList></select>
                    </div>
                </div>

                <!--Facility-->
                <div class="form-group">
                    <label class="control-label col-md-2">KU Site</label>
                    <div class="col-md-10">
                        <select asp-for="Facility" class="form-control" asp-items=ViewBag.SelectLists.SiteList></select>
                    </div>
                </div>

                <!--SchoolGrade-->
                <div class="form-group">
                    <label class="control-label col-md-2">Grade</label>
                    <div class="col-md-10">
                        <select asp-for="SchoolGrade" class="form-control" asp-items=ViewBag.SelectLists.SchoolGradeList></select>
                    </div>
                </div>

                <!--Gender-->
                <div class="form-group">
                    <label class="control-label col-md-2" for="Gender">Gender</label>
                    <div class="col-md-10">
                        <select asp-for="Gender" class="form-control" asp-items=ViewBag.SelectLists.GenderList></select>
                    </div>
                </div>

                <!--Income-->
                <div class="form-group">
                    <label class="control-label col-md-2">Household Income</label>
                    <div class="col-md-10">
                        <select asp-for="Income" class="form-control" asp-items=ViewBag.SelectLists.IncomeList></select>
                    </div>
                </div>

                <!--Lunch-->
                <div class="form-group">
                    <label class="control-label col-md-2">Free Lunch</label>
                    <div class="col-md-10">
                        <select asp-for="Lunch" class="form-control" asp-items=ViewBag.SelectLists.LunchList></select>
                    </div>
                </div>

                <!--EnrolledYear-->
                <div class="form-group">
                    <label class="control-label col-md-2">Enrollment Year (e.g. 1995)</label>
                    <div class="col-md-10">
                        <input class="form-control text-box single-line" asp-for="EnrolledYear" type="number" />
                    </div>
                </div>

                <!--EnrolledSemester-->
                <div class="form-group">
                    <label class="control-label col-md-2">Enrollment Semester</label>
                    <div class="col-md-10">
                        <select asp-for="EnrolledSemester" class="form-control" asp-items=ViewBag.SelectLists.SemesterList></select>
                    </div>
                </div>

                <!--AgeAtEnrollment-->
                <div class="form-group">
                    <label class="control-label col-md-2">Age at Enrollment</label>
                    <div class="col-md-10">
                        <input class="form-control text-box single-line" asp-for="AgeAtEnrollment" type="number" />
                    </div>
                </div>

                <!--Birthday-->
                <div class="form-group">
                    <label class="control-label col-md-2">Birthday</label>
                    <div class="col-md-10">
                        <input class="datepicker" asp-for="Birthday" />
                    </div>
                </div>

                <!--Active-->
                <div class="form-group">
                    <label class="control-label col-md-2">Active</label>
                    <div class="col-md-10">
                        <div class="checkbox">
                            <input checked="checked" class="check-box" asp-for="Active" type="checkbox" />
                            <input asp-for="Birthday" type="hidden" />
                        </div>
                    </div>
                </div>

                <!--TODO: make these only appear if active is unchecked-->
                <!--UnEnrolledYear-->
                <div class="form-group">
                    <label class="control-label col-md-2">Unenrolled Year (optional)</label>
                    <div class="col-md-10">
                        <input class="form-control text-box single-line" asp-for="UnEnrolledYear" type="number" value="" />
                    </div>
                </div>

                <!--UnEnrolledSemester-->
                <div class="form-group">
                    <label class="control-label col-md-2">Unenrolled Semester (optional)</label>
                    <div class="col-md-10">
                        <select asp-for="UnEnrolledSemester" class="form-control">
                            <option value="">Select Semester</option>
                            <option value="fall">fall</option>
                            <option value="spring">spring</option>
                            <option value="summer">summer</option>
                        </select>
                    </div>
                </div>


                <!--Parent information-->


                <h2>Edit Parent Information</h2>

                <h3>Parent 1</h3>

                <!--Parent 1 Name-->
                <div class="form-group">
                    <label class="control-label col-md-2">Name</label>
                    <div class="col-md-10">
                        <input asp-for="ParentName1" class="form-control text-box single-line" />
                    </div>
                </div>

                <!--Parent 1 Realtionship-->
                <div class="form-group">
                    <label class="control-label col-md-2">Relationship</label>
                    <div class="col-md-10">
                        <select asp-for="RelationshipParent1" class="form-control">
                            <option value="">Select Relationship</option>
                            <option value="Mother">Mother</option>
                            <option value="Father">Father</option>
                            <option value="Relative">Relative</option>
                            <option value="Guardian">Guardian</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>

                <!--Parent 1 Phone Number-->
                <div class="form-group">
                    <label class="control-label col-md-2">Phone Number</label>
                    <div class="col-md-10">
                        <input asp-for="ParentNumber1" class="form-control text-box single-line" />
                    </div>
                </div>

                <!--Parent 1 Apartment Number-->
                <div class="form-group">
                    <label class="control-label col-md-2">Apartment Number</label>
                    <div class="col-md-10">
                        <input asp-for="ParentAptNumber1" class="form-control text-box single-line" />
                    </div>
                </div>

                <!--Parent 1 Email Address-->
                <div class="form-group">
                    <label class="control-label col-md-2">Email address</label>
                    <div class="col-md-10">
                        <input asp-for="ParentEmailAddress1" class="form-control text-box single-line" />
                    </div>
                </div>

                <h3>Parent 2</h3>

                <!--Parent 2 Name-->
                <div class="form-group">
                    <label class="control-label col-md-2">Name</label>
                    <div class="col-md-10">
                        <input asp-for="ParentName2" class="form-control text-box single-line" />
                    </div>
                </div>

                <!--Parent 2 Realtionship-->
                <div class="form-group">
                    <label class="control-label col-md-2">Relationship</label>
                    <div class="col-md-10">
                        <select asp-for="RelationshipParent2" class="form-control">
                            <option value="">Select Relationship</option>
                            <option value="Mother">Mother</option>
                            <option value="Father">Father</option>
                            <option value="Relative">Relative</option>
                            <option value="Guardian">Guardian</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>

                <!--Parent 2 Phone Number-->
                <div class="form-group">
                    <label class="control-label col-md-2">Phone Number</label>
                    <div class="col-md-10">
                        <input asp-for="ParentNumber2" class="form-control text-box single-line" />
                    </div>
                </div>

                <!--Parent 2 Apartment Number-->
                <div class="form-group">
                    <label class="control-label col-md-2">Apartment Number</label>
                    <div class="col-md-10">
                        <input asp-for="ParentAptNumber2" class="form-control text-box single-line" />
                    </div>
                </div>

                <!--Parent 2 Email Address-->
                <div class="form-group">
                    <label class="control-label col-md-2">Email address</label>
                    <div class="col-md-10">
                        <input asp-for="ParentEmailAddress2" class="form-control text-box single-line" />
                    </div>
                </div>

                <!--variables that need to retain values (hidden from user)-->
                @Html.Hidden("StudentId")
                @Html.Hidden("ReportCards")
                @Html.Hidden("OutcomeMeasurements")
                <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

                <!--submit-->
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-default" formmethod="post" />
                    </div>
                </div>
            </div>
        </form>

        <div>
            @Html.ActionLink("Back", "View", new { id = Model.StudentId, ViewBag.returnUrl })
        </div>
    </div>
</body>
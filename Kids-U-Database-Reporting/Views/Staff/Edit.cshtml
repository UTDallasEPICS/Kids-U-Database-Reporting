
@model ApplicationUser
@{
    ViewData["Title"] = "Edit Staff";
}

<body>
    <div class="container body-content">
        <h2>Edit Staff</h2>
    </div>
    <form asp-controller="Staff" asp-action="FinalizeEdit" method="post" class="form-horizontal">

        <div class="form-group">
            <label class="control-label col-md-2">First Name</label>
            <div class="col-md-10">
                <input asp-for="FirstName" model.FirstName class="form-control text-box single-line" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Last Name</label>
            <div class="col-md-10">
                <input asp-for="LastName" model.LastName class="form-control text-box single-line" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">UserName</label>
            <div class="col-md-10">
                <input asp-for="UserName" model.UserName class="form-control text-box single-line" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Email</label>
            <div class="col-md-10">
                <input asp-for="Email" model.Email class="form-control text-box single-line" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Password</label>
            <div class="col-md-10">
                <input type="password" name="password" class="form-control text-box single-line" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Site</label>
            <div class="col-md-10">
                <select asp-for="Site" model.Site class="form-control" asp-items=ViewBag.SiteSelectList></select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Role</label>
            <div class="col-md-10">
                <select asp-for="Role" class="form-control">
                    <option value="Global Administrator">Global Administrator</option>
                    <option value="Site Coordinator">Site Coordinator</option>
                    <option value="Site Volunteer">Site Volunteer</option>
                </select>
            </div>
        </div>
        <div class="form-group">

            <label class="control-label col-md-2">Active</label>
            <div class="col-md-10">
                <select asp-for="Active" class="form-control">
                    <option value="True">Active </option>
                    <option value="False">Inactive </option>
                </select>
            </div>
        </div>

        @*Old email used to find the user in database incase the email is being edited*@
        <input hidden name="oldEmail" value=@Model.Email />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" formmethod="post" class="btn btn-default">Edit</button>
            </div>
        </div>
    </form>
    @Html.ActionLink("Back", "Index", "Staff")
</body>

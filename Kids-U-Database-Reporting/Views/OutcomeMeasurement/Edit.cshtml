@model OutcomeMeasurement
@{
    ViewData["Title"] = "Edit Outcome Measurement";
}

<body>
    <div class="container body-content">
        <h2>Outcome Measurements</h2>
        <h4>Edit Outcome Measurement - @Model.Student.FirstName @Model.Student.LastName</h4>
        <hr />

        <!--form-->
        <form asp-controller="OutcomeMeasurement" asp-action="Edit" method="post">
            <div class="form-horizontal">
                <!--SchoolGrade-->
                <div class="form-group">
                    <label class="control-label col-md-2">School Grade</label>
                    <select asp-for="ReportSchoolGrade" class="col-md-10 form-control" asp-items=ViewBag.SelectLists.SchoolGradeList></select>
                </div>

                <!--EnrolledSemester-->
                <div class="form-group">
                    <label class="control-label col-md-2">Semester</label>
                    <select asp-for="ReportSchoolSemester" class="col-md-10 form-control" asp-items=ViewBag.SelectLists.SemesterList></select>
                </div>

                <!--MATH-->
                <h4>Math</h4><hr />
                <div class="form-group">
                    <label class="control-label col-md-2">Pre-test: </label>
                    <input asp-for="MathPreTest" class="col-md-10 form-control" />
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Post-test: </label>
                    <input asp-for="MathPostTest" class="col-md-10 form-control" />
                </div>

                <!--Language Arts-->
                <h4>Language Arts</h4><hr />
                <div class="form-group">
                    <label class="control-label col-md-2">Pre-test: </label>
                    <input asp-for="LanguagePreTest" class="col-md-10 form-control" />
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Post-test: </label>
                    <input asp-for="LanguagePostTest" class="col-md-10 form-control" />
                </div>

                <!--Reading-->
                <h4>Reading</h4><hr />
                <div class="form-group">
                    <label class="control-label col-md-2">Pre-test: </label>
                    <input asp-for="ReadingPreTest" class="col-md-10 form-control" />
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Post-test: </label>
                    <input asp-for="ReadingPostTest" class="col-md-10 form-control" />
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Fluency 1: </label>
                    <input asp-for="ReadingFluencyTest" class="col-md-10 form-control" />
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Fluency 2: </label>
                    <input asp-for="ReadingFluencyTest2" class="col-md-10 form-control" />
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Fluency 3: </label>
                    <input asp-for="ReadingFluencyTest3" class="col-md-10 form-control" />
                </div>

                <!--Self Esteem-->
                <h4>Self-Esteem</h4><hr />
                <div class="form-group">
                    <label class="control-label col-md-2">Pre-test: </label>
                    <input asp-for="SelfEsteemPreTest" class="col-md-10 form-control" />
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Post-test: </label>
                    <input asp-for="SelfEsteemPostTest" class="col-md-10 form-control" />
                </div>


                <!--variables that need to retain values (hidden from user)-->
                @Html.Hidden("OutcomeId")
                @Html.Hidden("Student")
                <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

                <!--submit-->
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-default" formmethod="post" />
                    </div>
                </div>
            </div>
        </form>

        <!--back-->
        <div>
            @Html.ActionLink("Back", "View", new { Model.Student.StudentId, returnUrl = ViewBag.returnUrl })
        </div>
    </div>
</body>